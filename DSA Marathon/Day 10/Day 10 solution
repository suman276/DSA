#include <bits/stdc++.h> 
using namespace std;

int main(){
    int cases;
    cin>>cases;
    
    while(cases>0){
        string a;
        cin>>a;
       int flag=0;
       int t=a.size()/2;
       stack<char> q;
       for(int i=0; i<a.size(); i++){
           q.push(a[i]);
       }
       
       while(q.empty()!=1){
           char a1;
           char a2;
           a1=q.top();
           q.pop();
           a2=q.top();
           q.pop();
           if(a1==a2){
               flag++;
           }
       }
       if(flag==t){
           cout<<"true"<<endl;
       }
       else
       cout<<"false"<<endl;
        cases--;
    }
    return 0;
}
