#include<iostream>
#include<string>
#include<algorithm>
using namespace std;

int main(){
    int cases;
    cin>>cases;
    while(cases>0){
        string a;
        char b;
        cin>>a;
        cin>>b;
        int count=0;
       for(int i=0; i<a.size(); i++){
           if(b==a[i]){
               count++;
           }
       }
        cout<<count<<endl;
        cases--;
    }
    return 0;
}
